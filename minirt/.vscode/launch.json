{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug MiniRT",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/minirt",
            "args": ["${input:rtFile}"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build MiniRT"
        }
    ],
    "inputs": [
        {
            "id": "rtFile",
            "description": "Path to .rt scene file",
            "default": "scenes/test_basic_sphere.rt",
            "type": "promptString"
        }
    ]
}
