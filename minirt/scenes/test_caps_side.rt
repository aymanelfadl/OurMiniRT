# Test scene for cylinder and cone caps from side view
# This scene shows the caps from the side for better visibility

# Ambient lighting
A 0.2 255,255,255

# Camera positioned to the side to see caps clearly
C 5,2,0 -1,-0.3,0 70

# Light from the side
L 3,4,2 0.8 255,255,255

# Cylinder horizontal - left cap should be visible
cy -1,0,-2 1,0,0 0.8 3.0 255,100,100

# Cone horizontal pointing right - base cap should be visible on left
cn -1,0,1 1,0,0 25 2.5 100,255,100

# Cylinder vertical for comparison
cy 2,0,-1 0,1,0 0.6 1.8 100,100,255

# Cone vertical for comparison  
cn 2,0,1.5 0,1,0 20 1.5 255,255,100

# Ground plane
pl 0,-1.5,0 0,1,0 180,180,180
