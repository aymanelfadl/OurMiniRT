# Artistic Spheres Scene - Solar System Inspired
# This scene creates a solar system-like arrangement with a central large sphere
# surrounded by smaller spheres in orbital patterns

# Ambient lighting - dim to simulate space
A 0.1 255,255,255

# Camera positioned to view the system from an angle
C -40,-40,-20 0.6,0.6,0.4 75

# Main light source - simulating a sun
L 0,0,0 0.9 255,255,255

# Central "sun" - large bright yellow sphere
sp 0,0,0 20 255,255,0

# Inner orbit - small planets
sp 30,0,0 4 255,100,100
sp -30,0,0 4 100,255,100
sp 0,30,0 4 100,100,255
sp 0,-30,0 4 255,0,255

# Middle orbit - medium planets
sp 45,45,0 6 255,165,0
sp -45,45,0 6 255,69,0
sp -45,-45,0 6 138,43,226
sp 45,-45,0 6 0,191,255

# Outer orbit - larger planets
sp 70,0,0 8 139,69,19
sp -70,0,0 8 255,20,147
sp 0,70,0 8 50,205,50
sp 0,-70,0 8 220,20,60

# Asteroid belt - tiny spheres
sp 55,20,5 2 128,128,128
sp -55,20,-5 2 128,128,128
sp 55,-20,5 2 128,128,128
sp -55,-20,-5 2 128,128,128
sp 20,55,5 2 128,128,128
sp 20,-55,-5 2 128,128,128
sp -20,55,5 2 128,128,128
sp -20,-55,-5 2 128,128,128

# Distant objects
sp 90,30,10 5 72,61,139
sp -90,-30,10 5 47,79,79
sp 30,90,-10 5 106,90,205
